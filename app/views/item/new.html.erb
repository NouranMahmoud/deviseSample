  </div>
  <div class="field">
    <%= f.label :purpose, "Purpose" %><br />
    <%= f.text_field :purpose %>
  </div>
  <div class="field">
    <%= f.label :area, "Area" %><br />
    <%= f.text_field :area %>
  </div>
  <div class="field">
    <%= f.label :description, "Description" %><br />
    <%= f.text_area :description %>
  </div>
 <%= fields_for @address do |c| %>
    
