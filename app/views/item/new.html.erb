    <%= c.label :city, "city" %><br />
    <%= c.text_field :city %>
  </div>
  <div class="field">
    <%= c.label :community, "community" %><br />
    <%= c.text_field :community %>
  </div>
  <div class="field">
    <%= c.label :subcommunity, "subcommunity" %><br />
    <%= c.text_field :subcommunity %>
  </div>
  <div class="field">
    <%= c.label :subtype, "subtype" %><br />
    <%= c.text_field :subtype %>
  </div>
  
  <% end %>
<div class="action">
    <%= f.submit "Create" %><br />
  </div>
<% end %>
